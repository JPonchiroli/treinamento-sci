program Fundamentos;


// Variaveis globais

var
    nome: string;
    idade: integer;
    altura: real;
    ativo: boolean = true;
    
const 
    TAXA: real = 0.15; //  Valor fixo

begin

    
    //Write('Informe seu nome: ');
    Readln(nome);
    //Write('Informe sua idade: ');
    Readln(idade);
    //Write('Informe sua altura: ');
    Readln(altura);
    
    Writeln('--------------');
    Writeln(nome);
    Writeln(idade);
    Writeln(altura:0:2);
    Writeln(ativo);
    Writeln(TAXA:0:2);
  Writeln('--------------');
end.
